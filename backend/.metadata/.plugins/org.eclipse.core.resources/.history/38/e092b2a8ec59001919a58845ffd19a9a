import java.util.ArrayList;
import java.util.List;

public class Utils {
	public League setSerieA() {
		List<Player> rosters = new ArrayList();
		rosters.add(new Player("Arkadius", "Milik", "CF", 99, 25));
		rosters.add(new Player("Dries", "Mertens", "LF", 14, 31));
		rosters.add(new Player("Lorenzo", "Insigne", "AS", 24, 27));
		rosters.add(new Player("Josè Maria", "Callejon", "AD", 7, 32));
		rosters.add(new Player("Adam", "Ounas", "AD", 11, 22));
		rosters.add(new Player("Simone", "Verdi", "ES", 9, 26));
		rosters.add(new Player("Fabiàn", "Ruiz", "CC", 8, 23));
		rosters.add(new Player("Marques Loureiro", "Allan", "CC", 5, 28));
		rosters.add(new Player("Kalidou", "Koulibaly", "DC", 26, 27));
		Team naples = new Team("Naples", "Ancelotti", "San Paolo", rosters);
		
		List<Team> teams = new ArrayList<>();
		teams.add(naples);
		return new League("SerieA", "Italy", "Gaetano Miccichè", teams);
	}
}
